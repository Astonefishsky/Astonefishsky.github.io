// code block file name
.highlight figcaption {
    color: #fffafa;
    background: #808080;
    font-family: $code-font-family;
}

// 代码行数
.highlight .gutter pre {
    background: #e0e0e0;
}

//代码内容
.highlight .code pre {
    background: #eef5ff;
}