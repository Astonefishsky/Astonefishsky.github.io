//全局布局美化代码
//url:Bolg/themes/next/source/images
body {
    background-image:url(/images/Background.jpg);
//图像是否重复
    background-repeat: no-repeat;
//图像固定
    background-attachment: fixed;
//图像位置
    background-position: center;
//宽高占屏幕百分比
    background-size: 100% 100%;
}
//R G B 透明度0-1，越低越透明
.main-inner {
    background-color: rgba(255, 255, 255, 0);
    padding: 10px 30px 30px 30px;
}

//post板块，设置圆角
//padding内边框距离
.post-block{
        background-color: rgba(255, 255, 255, 0.90);
        //margin-top: 24px;
        margin-bottom: 24px;
        padding: 30px;
        border-radius: 30px 30px 30px 30px;
        box-shadow: 8px 7px 2px 0 rgba(0,0,0,0.12), 7px 4px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12);
}

//最上边一条线
.headband {
    background-color: rgba(255, 255, 255, 0);
}

//啊啊啊啊啊啊啊啊，这个元素让我找了一天，气死了
//菜单栏整体背景
header.header {
    //距离最上边的距离
    margin-top: 5px;
    //背景颜色，最后一个参数0-1代表透明度，越低越透明
    background-color: rgba(255 ,255 ,255 ,0.90);
    //圆角，分别为左上，右上，右下，左下
    border-radius: 30px 30px 30px 30px;
    //阴影
    box-shadow: 8px 7px 2px 0 rgba(0,0,0,0.12), 7px 4px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12);   	
}

//史莱姆小屋那个黑框
.site-brand-container {
    background-color: rgba(0 ,0 ,0 ,0.9);
    border-radius: 30px 30px 0px 0px;
}

//侧边栏
.sidebar-inner {
    background-color: rgba(255 ,255 ,255 ,0.85);
    border-radius: 30px 30px 30px 30px;
    box-shadow: 8px 7px 2px 0 rgba(0,0,0,0.12), 7px 4px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12);    
}

//翻页按钮
.page-number {
    background-color: rgba(200 ,255 ,255 ,0.85);
    border-radius: 10px 10px 10px 10px;
    margin: 5px;
    box-shadow: 2px 2px 1px 1px rgba(0,0,0,0.20), 2px 2px 1px -2px rgba(0,0,0,0.06), 0 1px 2px 0 rgba(0,0,0,0.12),-1px -1px 1px 0 rgba(0,0,0,0.3);    
}

//翻页框
.pagination {
    background-color: rgba(255 ,255 ,255 ,0.7);
    margin-top: 5px;
    padding: 5px;
    border-radius: 10px 10px 10px 10px;
    box-shadow: 8px 7px 2px 0 rgba(0,0,0,0.12), 7px 4px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12);    
}

//评论
